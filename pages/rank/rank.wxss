
.top-rank {
  /* border: 1px solid blue; */
  background: rgba(0, 0, 0, .4);
  padding: 20rpx 0;
}

.top-rank .title {
  text-align: center;
  font: 400 50rpx Oswald, sans-serif;
  color: #FFF;
  margin-top: 10px;
}

.detail {
  /* border: 1px solid saddlebrown; */
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.top-group,
.top-user {
  width: 300rpx;
}

.top-group-head,
.top-user-head {
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  /* color:  */
  line-height: 300rpx;
  font-size: 80rpx;
  color: #FFF;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.top-group-name,
.top-user-name {
  border-radius: 5px;
  background: #333;
  height: 50rpx;
  line-height: 50rpx;
  color: orange;
  font-weight: 500;
  text-align: center;  
}


.group-list .title
{
  display: flex;
  text-align: left;
  background: #EEE;
  padding: 10rpx 0;
}

.group-list .title .rank,
.group-item .rank {
  flex-basis: 20%;
  padding-left: 20rpx;
}

.group-list .title .profile,
.group-item .name {
  flex-basis: 50%;
  padding-left: 20rpx;
}

.group-list .title .counts,
.group-item .counts
{
  flex-basis: 30%;
  padding-left: 20rpx;
}

.group-item {
  display: flex;
  text-align: left;
  line-height: 120rpx;
  height: 120rpx;
  border-bottom: 1px solid rgba(107, 113, 114, 0.1);
  padding: 10rpx 0;
}

.rank .play {
  position: fixed;
  bottom: 0;
  z-index: 1;
  text-align: center;
  line-height: 80rpx;
  width: 100%;
  height: 80rpx;
  color: #FFF;
  background: orange;
}

