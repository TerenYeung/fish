@import '../../static/css/animate.wxss';
.share {
  position: relative;
  height: 100%;
  width: 100%;
}

.share-main {
  /* border: 1px solid transparent; */
  height: 40%;
  position: relative;
  background: #595;
  /* text-align: center; */
  /* position: absolute; */
}

.share-main image {
  width: 200rpx;
  z-index: 1;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.share-rank {
  /* border: 1px solid blue; */
  background: rgba(0, 0, 0, .4);
  position: absolute;
  top: 40%;
  bottom: 0;
  left: 0;
  right: 0;
}

.share-rank .title {
  text-align: center;
  font: 400 50rpx Oswald, sans-serif;
  color: #FFF;
  margin-top: 10px;
}

.detail {
  /* border: 1px solid saddlebrown; */
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.top-group,
.top-user {
  width: 300rpx;
}

.top-group-head,
.top-user-head {
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  /* color:  */
  line-height: 300rpx;
  font-size: 80rpx;
  color: #FFF;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.top-group-name,
.top-user-name {
  border-radius: 5px;
  background: #333;
  height: 50rpx;
  line-height: 50rpx;
  color: orange;
  font-weight: 500;
  text-align: center;  
}

.share-btn {
  /* border: 1px solid olive; */
  z-index: 2;
  background: orange;
  color: #FFF;
  border-radius: 20rpx;
  font-weight: 500;
  font-size: 30rpx;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  padding: 5rpx 0;
  position: absolute;
  bottom: 20rpx;
}