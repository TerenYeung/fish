/**index.wxss**/
@import '../../static/css/animate.wxss';

.index {
  width: 100%;
  height: 100%;
  background: rgba(107, 113, 114, 0.1);
}

.index .banner {
  overflow: hidden;
  /* border: 1px solid transparent; */
  height: 40%;
  position: relative;
  background: #595;
}

.banner .title {
  margin: 20px 0;
  font: 400 30px Oswald, sans-serif;
  text-align: center;
  text-transform: uppercase;
  color: #274727;
}

.banner .fish {
  width: 150rpx;
  height: 40rpx;
  position: absolute;
  top: 10%;
  left: -150rpx;
  z-index: 1;
}

@keyframes move {
  0% {
    top: 10%;
    left: 0%;
    /* background: red; */
  }
  25% {
    top: 50%;
    left: 25%;
  }
  50% {
    top: 10%;
    left: 50%;
  }
  75% {
    top: 50%;
    left: 75%;
  }
  100% {
    top: 10%;
    left: 100%;
  }
}

.fish-0 {
  /* top: 40rpx; */
  animation: move 4s cubic-bezier(0.645, 0.045, 0.355, 1) infinite;
  /* -webkit-transition: all 600ms cubic-bezier(0.785, 0.135, 0.15, 0.86);
  transition:         all 600ms cubic-bezier(0.785, 0.135, 0.15, 0.86); */
}

.fish-1 {
  animation: move 4s cubic-bezier(0.645, 0.045, 0.355, 1) 1s infinite ;
}

.fish-2 {
  animation: move 4s cubic-bezier(0.645, 0.045, 0.355, 1) 2s infinite ;
}

.fish-3 {
  animation: move 4s cubic-bezier(0.645, 0.045, 0.355, 1) 3s infinite ;
}

.banner .banner-btn {
  width: 100rpx;
  border: 2px solid olive;
  font-weight: 500;
  border-radius: 5px;
  color: olive;
  text-align: center;
  position: absolute;
  z-index: 2;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
}


.index .profile {
  height: 120rpx;
  background: #FFF;
  display: flex;
  justify-content: space-between;
}

.profile .profile-info {
  line-height: 120rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.profile .profile-info image{
  vertical-align: middle;
  width: 100rpx;
  height: 100rpx;
  margin-top: 10rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.profile .profile-data {
  margin-right: 20rpx;
  line-height: 120rpx;
  /* vertical-align: middle; */
}

.index .world-rank {
  border-top: 2px solid rgba(107, 113, 114, 0.1);
  height: 80rpx;
  line-height: 80rpx;
  background: #FFF;
  position: relative;
}

.world-rank image {
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  margin: 0 20rpx;
}

.arrow {
  color: #333;
  position: absolute;
  right: 20rpx;
}

.groups-list {
  margin-top: 3px;
  background: #FFF;
}

.groups-list .title {
  text-align: center;
}

.rank-item {
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid rgba(107, 113, 114, 0.1);
}

image,
.head-name,
.name {
  float: left;
}

image,
.head-name {
  margin-left: 20rpx;
}

.head-name {
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
  text-align: center;
  line-height: 50rpx;
  background: orange;
  border-radius: 50%;
  color: #FFF;
  font-weight: 500;
}

.name {
  margin-left: 20rpx;
}
