@import '../../static/css/animate.wxss';

.group {
  width: 100%;
  height: 100%;
}

.main {
  height: 100%;
  width: 100%;
}

.group .main-banner {
  overflow: hidden;
  height: 40%;
  position: relative;
  background: #595;
}

.main-banner image {
  width: 200rpx;
  height: 200rpx;
  z-index: 1;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.main-controller {
  overflow: hidden;
  height: 80rpx;
}

.main-controller .start {
  width: 30%;
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #FFF;
  background: #333;
}

.main-controller .share {
  width: 70%;
  float: left;
  background: orange;
  border-radius: 0;
  line-height: 80rpx;
  border: none;
  outline: none;
  color: #FFF;
}

.main-data {

}

.main-data .name {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 2px solid rgba(107, 113, 114, 0.1);
  border-bottom: 2px solid rgba(107, 113, 114, 0.1);
}

.main-data .detail {
  overflow: hidden;
}

.detail .people,
.detail .play {
  float: left;
  height: 120rpx;
  width: 50%;
  text-align: center;
  border-bottom: 2px solid rgba(107, 113, 114, 0.1);
}

.detail .data,
.detail .desc {
  padding: 5rpx 0;
  height: 50%;
}

.member-list .title
{
  display: flex;
  text-align: center;
  background: #EEE;
  padding: 10rpx 0;
}

.member-list .title .rank,
.member-list .title .counts,
.member-item .rank,
.member-item .counts
{
  flex-basis: 20%;
}

.member-list .title .profile,
.member-list .title .name,
.member-item .img,
.member-item .name
{
  flex-basis: 30%;
}

.member-item {
  display: flex;
  text-align: center;
  line-height: 120rpx;
  height: 120rpx;
  border-bottom: 1px solid rgba(107, 113, 114, 0.1);
  padding: 10rpx 0;
}

.member-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
