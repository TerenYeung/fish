.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flex-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.flex-item.active{
  color:#0091ff;
}
.map_box{
  position:absolute;
  top: 0;
  bottom: 90px;
  left: 0px;
  right: 0px;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  position:absolute;
  height: 90px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.text_box .text{
  margin: 10rpx 30rpx;
}
.detail_button{
  position:absolute;
  bottom: 30px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #5a5a5a;
  width:50px;
  text-align:center;
  border-radius:5px;
  box-shadow: rgba(107, 113, 114, 0.15) 0px 2px 20px 0px;
}

.detail_button.active {
  color: #5a5a5a;
  background: #FFF;
  border: 2rpx solid #5a5a5a;
}

.location__detail {
  position:absolute;
  top: 0;
  right:0;
  width:400rpx;
  background: #FFF;
  box-shadow: rgba(107, 113, 114, 0.15) 0px 2px 20px 0px;
}

.location__detail-item {
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 26rpx;
  color:#5a5a5a;
  padding: 20rpx 10rpx;
}

